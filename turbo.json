{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": {
      "dependsOn": [
        "^build",
        "$VERCEL_URL",
        "$PORT",
        "$NODE_ENV",
        "$NEXT_PUBLIC_ALCHEMY_ID",
        "$NEXT_PUBLIC_WEB3_STORAGE_API_KEY",
        "$SUBGRAPH_URL"
      ],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "lint": {
      "outputs": []
    },
    "dev": {
      "cache": false
    }
  }
}
